@model List<ProductManagementApp.Models.Product>

@{
    ViewData["Title"] = "Search Tanks";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Search">
    <div class="form-group">
        <input type="text" name="searchTerm" class="form-control" placeholder="Enter tank name to search">
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

@if (Model != null && Model.Count > 0)
{
    <h3>Search Results:</h3>
    <ul>
        @foreach (var tank in Model)
        {
            <li>@tank.Name - @tank.Description</li>
        }
    </ul>
}
else if (Model != null && Model.Count == 0)
{
    <p>No tanks found matching the search term.</p>
}
